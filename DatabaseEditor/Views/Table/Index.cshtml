@model dynamic
@{
    ViewData["Title"] = "Database Table Editor";
    var tables = ViewBag.Tables as List<string> ?? new List<string>();
    var error = TempData["Error"] as string;
    var success = TempData["Success"] as string;
}

<div class="container">
    <div class="row">
        <!-- Left: List of tables -->
        <div class="col-md-4">
            <h2>Таблицы</h2>
            <ul class="list-group">
                @foreach (var table in tables)
                {
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                        @table
                            <div>
                                <a href="@Url.Action("Edit", new { name = table })" class="btn btn-sm btn-primary">Edit</a>
                                <form asp-action="Delete" method="post" style="display:inline;">
                                    <input type="hidden" name="name" value="@table" />
                                    <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete @table?');">Delete</button>
                                </form>
                            </div>
                        </li>
                }
            </ul>
            <a href="@Url.Action("Create")" class="btn btn-success mt-3">Создать новую таблицу</a>
        </div>
        <div class="col-md-8">
            <h2>Реактор таблиц</h2>
            <p>Выбери таблицу для редактирования или создай новую.</p>
        </div>
    </div>
</div>

@if (!string.IsNullOrEmpty(error))
{
        <script>alert('@error');</script>
}
@if (!string.IsNullOrEmpty(success))
{
        <script>alert('@success');</script>
}